%%% Title page
\makeatletter
\def\maketitle{%
  \setlength{\headheight}{20pt}
  \thispagestyle{title}%
  {\centering
    {\normalsize \@university\par}%
    {\normalsize \@department\par}%
    {\normalsize \@laboratory\par}%
    \vskip 33mm
    {\large \@degree\par}%
    \vskip 10mm
    {\LARGE \@title\par}%
    \vskip 10mm
    {\large \@author\par}%
    \vfill
    \vbox{\large
      {\it \dateofsubname:}\\
      \@date\par
    }%
    \vskip 6mm
    \vbox{\large
      {\it \supervisorsname:}\\
      \@supervisors\par
    }%
  }%
  \clearpage{\pagestyle{empty}\cleardoublepage}
  \setlength{\headheight}{15pt}
}
\def\supervisors#1{\def\@supervisors{#1}}
\def\university#1{\def\@university{#1}}
\def\department#1{\def\@department{#1}}
\def\laboratory#1{\def\@laboratory{#1}}
\def\degree#1{\def\@degree{#1}}
\makeatother


